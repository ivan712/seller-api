// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  user
  owner
}

model User {
  id             String         @id @default(uuid())
  phoneNumber    String         @unique
  name           String?
  organisationId String?
  organisation   Organisation?  @relation(fields: [organisationId], references: [id])
  role           Role
  passwordHash   String?
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  SurveyAnswer   SurveyAnswer[]
}

model RefreshToken {
  // id     Int    @id @default(autoincrement())
  userId String
  token  String @unique
}

enum DataType {
  validationCode
  passwordUpdateToken
}

model ValidationData {
  userContact    String
  data      String
  expiredAt DateTime
  dataType  DataType

  @@id([userContact, dataType])
}

enum OrgType {
  LEGAL
  INDIVIDUAL
}

enum OrgStatus {
  sent_to_moderation
  on_moderation
  registered
  rejected
}

model Organisation {
  id           String    @id @default(uuid())
  name         String
  inn          String    @unique
  type         OrgType
  ogrn         String
  legalAddress String
  status       OrgStatus
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  User         User[]
}

model SurveyQuestion {
  id           Int            @id @default(autoincrement())
  question     String
  SurveyAnswer SurveyAnswer[]
}

model SurveyAnswer {
  userId         String
  user           User?           @relation(fields: [userId], references: [id])
  questionId     Int
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  surveyQuestion SurveyQuestion? @relation(fields: [questionId], references: [id])
  answer         String

  @@id([userId, questionId])
}
