// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  user
  owner
}

model User {
  id             Int            @id @default(autoincrement())
  phoneNumber    String         @unique
  name           String?
  organisationId Int?
  organisation   Organisation?  @relation(fields: [organisationId], references: [id])
  role           Role
  passwordHash   String?
  SurveyAnswer   SurveyAnswer[]
}

model RefreshToken {
  id     Int    @id @default(autoincrement())
  userId Int
  token  String @unique
}

enum DataType {
  validationCode
  passwordUpdateToken
}

model ValidationData {
  phoneNumber String
  data        String
  expiredAt   DateTime
  dataType    DataType

  @@id([phoneNumber, dataType])
}

enum OrgType {
  LEGAL
  INDIVIDUAL
}

enum OrgStatus {
  sent_to_moderation
  on_moderation
  registered
  rejected
}

model Organisation {
  id           Int       @id @default(autoincrement())
  name         String
  inn          String    @unique
  type         OrgType
  ogrn         String
  legalAddress String
  status       OrgStatus
  User         User[]
}

model SurveyQuestion {
  id           Int            @id @default(autoincrement())
  question     String
  SurveyAnswer SurveyAnswer[]
}

model SurveyAnswer {
  userId         Int
  user           User?           @relation(fields: [userId], references: [id])
  questionId     Int
  surveyQuestion SurveyQuestion? @relation(fields: [questionId], references: [id])
  answer String
  
  @@id([userId, questionId])
}
